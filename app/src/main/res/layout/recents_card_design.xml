<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mv_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/recent1"
            android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/mv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test"
                android:layout_toRightOf="@+id/mv_image"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:fontFamily="@font/poppins"/>
            <TextView
                android:id="@+id/mv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fhfh h,duc hy,edy gmjeyjueyb hyekeyeykyb gjykuetbtkutj htjju"
                android:layout_below="@+id/mv_title"
                android:layout_toRightOf="@id/mv_image"
                android:padding="10dp"/>






    </RelativeLayout>
</androidx.cardview.widget.CardView>