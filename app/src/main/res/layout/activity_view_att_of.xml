<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view_att_of"
    android:background="@drawable/grad30">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:padding="8dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:src="@drawable/back" />

    <ImageView
        android:id="@+id/nav_view"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="50dp"
        android:src="@drawable/attendx" />

    <TextView
        android:id="@+id/mem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nav_view"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Member name"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/mem_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mem_name"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Phone no."
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/mem_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mem_phone"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="classroom"
        android:textColor="@color/white" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mem_dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/nav_view"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/dash_dp"
        app:civ_border_color="#C3FFFFFF"
        app:civ_border_overlay="true"
        app:civ_border_width="4dp" />

    <sun.bob.mcalendarview.MCalendarView
        android:id="@+id/calendar"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_below="@id/mem_dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#77FDFCFC"
        tools:context=".view_att_of" />

    <TextView
        android:id="@+id/att_grp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendar"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:paddingTop="5dp"
        android:text="Overall Attendance : "
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/att_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendar"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/att_grp"
        android:fontFamily="@font/poppins_semibold"
        android:paddingTop="5dp"
        android:text="0"
        android:textColor="@color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/att_grp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:paddingTop="5dp"
        android:text="Attendance Graph"
        android:textColor="@color/white" />


</RelativeLayout>