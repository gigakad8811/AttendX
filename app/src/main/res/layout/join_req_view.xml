<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:layout_margin="12dp">


    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/bg3">

        <TextView
            android:id="@+id/stu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Student Name"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stu_name"
            android:fontFamily="@font/poppins"
            android:text="Phone number"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone"
            android:fontFamily="@font/poppins_semibold"
            android:text="Email id"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/desc_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Wants to join your classroom, please do verify..."
            android:textColor="@color/white"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/approve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desc_line"
            android:elevation="3dp"
            android:src="@drawable/approve" />

        <ImageView
            android:id="@+id/deny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/desc_line"
            android:src="@drawable/deny" />


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/profile"
            app:civ_border_color="#94FFFFFF"
            app:civ_border_overlay="true"
            app:civ_border_width="5dp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>